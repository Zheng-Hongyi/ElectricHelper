<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background_color">
    
    <include layout="@layout/main_header"/>
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView 
       			 android:layout_width="fill_parent"
       			 android:layout_height="100dp"
       			 android:id="@+id/main_banner"
       			 android:background="@color/red">
    		</ImageView>
    		<!-- 首页第一排 -->
    		<LinearLayout 
    		    android:layout_width="fill_parent"
    		    android:layout_height="wrap_content"
    		    android:orientation="horizontal"
    		    android:layout_marginTop="10dp">
    		    <!-- 用户信息 -->
    		    <include layout="@layout/main_item"
    		        android:id="@+id/main_item_userinfo"
    		        android:layout_width="88dp"
    		        android:layout_height="108dp"
    		        android:layout_weight="0.33"/>
    		    
    		    <!-- 常规业务 -->
    		    <include layout="@layout/main_item"
    		        android:id="@+id/main_item_common_buse"
    		        android:layout_width="88dp"
    		        android:layout_height="108dp"
    		        android:layout_weight="0.33"/>
    		    
    		    <!-- 用电常识 -->
    		    <include layout="@layout/main_item"
    		        android:id="@+id/main_item_common_sence"
    		        android:layout_width="88dp"
    		        android:layout_height="108dp"
    		        android:layout_weight="0.33"/>
    		</LinearLayout>
    		
    		<!-- 首页第二排 -->
    		<LinearLayout 
    		    android:layout_width="fill_parent"
    		    android:layout_height="wrap_content"
    		    android:orientation="horizontal"
    		    android:layout_marginTop="10dp">
    		    <!-- 在线求助 -->
    		    <include layout="@layout/main_item"
    		        android:id="@+id/main_item_online_bed"
    		        android:layout_width="88dp"
    		        android:layout_height="108dp"
    		        android:layout_weight="0.33"/>
    		    
    		    <!-- 消息通知 -->
    		    <include layout="@layout/main_item"
    		        android:id="@+id/main_item_msg_notify"
    		        android:layout_width="88dp"
    		        android:layout_height="108dp"
    		        android:layout_weight="0.33"/>
    		    
    		    <!-- 关于我们 -->
    		    <include layout="@layout/main_item"
    		        android:id="@+id/main_item_about_us"
    		        android:layout_width="88dp"
    		        android:layout_height="108dp"
    		        android:layout_weight="0.33"/>
    		</LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    
    

</LinearLayout>
